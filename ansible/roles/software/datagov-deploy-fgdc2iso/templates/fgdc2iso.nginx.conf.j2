server {
    listen 80 default_server;

    server_name _;

    return 301 https://$host$request_uri;
}

server {
  listen 443 default_server ssl;
  server_name _;

  ssl_certificate {{ fgdc2iso_tls_certificate_filepath }};
  ssl_certificate_key {{ fgdc2iso_tls_key_filepath }};

  location / {
    proxy_pass http://127.0.0.1:8080/;
  }
}
